<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#082627" />
            <corners android:radius="50dp" />
            <stroke android:width="5dp" android:color="@color/colorAccent" />
        </shape>
    </item>
    <item>
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorDarkGreen" />
            <corners android:radius="25dp" />
            <size android:width="270dp" android:height="60dp" />
        </shape>
    </item>
</selector>