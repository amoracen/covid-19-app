<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Action Bar application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Welcome Screen Buttons-->
    <style name="WelcomeScreenButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">300dp</item>
    </style>

    <!--Forms Style-->
    <style name="RegistrationLoginForm">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorDarkGreen</item>
        <item name="android:textColorHint">@color/colorDarkGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!--Style For Worldwide Stats-->
    <style name="WorldWideStats">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border_background_green</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--Style For Country Stats-->
    <style name="CountryStats">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border_background_green</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--Tables Style-->
    <style name="TableStyleCommon">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkGreen</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:maxHeight">65dp</item>
    </style>
    <!--Tables Style Flags-->
    <style name="TableStyleFlag" parent="TableStyleCommon">
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">75dp</item>
    </style>
    <!--Tables Style Country-->
    <style name="TableStyleCountry" parent="TableStyleCommon">
        <item name="android:minWidth">115dp</item>
        <item name="android:maxWidth">115dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--Tables Style-->
    <style name="TableStyle" parent="TableStyleCommon">
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">100dp</item>
    </style>

    <style name="TableStyleLong" parent="TableStyleCommon">
        <item name="android:minWidth">125dp</item>
        <item name="android:maxWidth">125dp</item>
    </style>
    <!--Positive Toast Style-->
    <style name="ToastPositive">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorWhite</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@color/holo_blue</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">LONG</item>
        <item name="stIconStart">@drawable/ic_star</item>
        <item name="stGravity">top</item>
        <item name="stRadius">25dp</item>
    </style>
    <!--Error Toast Style-->
    <style name="ToastError">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorWhite</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@color/holo_red_light</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">5dp</item>
        <item name="stStrokeColor">@color/holo_orange_dark</item>
        <item name="stIconStart">@drawable/ic_error</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">center</item>
        <item name="stRadius">25dp</item>
    </style>
</resources>
