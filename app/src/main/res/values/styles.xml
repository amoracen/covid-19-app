<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Welcome Screen Buttons-->
    <style name="WelcomeScreenButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">300dp</item>
    </style>

    <!--Forms Style-->
    <style name="RegistrationLoginForm">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorDarkGreen</item>
        <item name="android:textColorHint">@color/colorDarkGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!--Style For Worldwide Stats-->
    <style name="WorldWideStats">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border_background_green</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
