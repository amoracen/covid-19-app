<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="State"
        android:textAlignment="textStart"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/casesTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Total Confirmed"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/todayCasesTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="New Confirmed"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activeTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Active"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/deathsTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Total Deaths"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/todayDeathsTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="New Deaths"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/testTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Number of Tested"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/testsPerOneMillionTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/table_border"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Tested Per One Million"
        android:textAlignment="textEnd"
        android:textColor="@color/colorDarkGreen"
        android:textSize="15sp" />
</LinearLayout>
