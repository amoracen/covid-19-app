<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="fau.amoracen.covid_19update.ui.homeActivity.api1.CountriesFragment">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorDarkGreen"
        android:fontFamily="@font/bevan"
        android:text="World Fragment"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_border_shadow"
        android:elevation="10dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/updatedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border_background_green"
            android:fontFamily="@font/bevan"
            android:text="Updated"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/totalCasesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_border_background_green"
        android:elevation="10dp"
        android:fontFamily="@font/bevan"
        android:padding="5dp"
        android:text="Total Cases"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22sp" />


</LinearLayout>
